<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_transparent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_transparent_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_transparent_title"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cb_transparent_show_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_transparent_content"
        android:layout_below="@id/tv_transparent_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/donot_show"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="invisible"
        android:theme="@style/MyCheckBox" />

    <Button
        android:id="@+id/btn_transparent_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb_transparent_show_ask"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_rect_bg"
        android:text="@string/okey"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>